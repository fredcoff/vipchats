<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Vip-Chats - Setup Account</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/font-awesome.min.css" rel="stylesheet">
    <link href="/css/jquery.dynatable.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">

    <script src="/js/jquery.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery.dynatable.js"></script>
</head>

<style>
    .form-control-plaintext{
        width:100%;
    }
</style>
<body class="fixed-nav sticky-footer bg-dark sidenav-toggled" id="page-top">
<%- include menu.ejs %>

<div class="content-wrapper">
    <div class="container">
        <div class="card mb-3">
            <div class="card-body"  align="center">
                <h1>Change your email and password</h1>
                <br/>
                <h6>  <%- message %>  </h6>
                <form method="post" action="/setup_account_email">
                    <div class="form-group row">
                        <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-8">
                            <input type="text"  class="form-control" name="Email" value="<%=Email%>">
                        </div>
                        <div class="col-sm-2">
                            <input type="submit"  class="btn btn-success" value="Submit">
                        </div>
                    </div>
                </form>
                <hr/>
                <form method="post" id="pwdform" action="/setup_account_pwd" onsubmit="return hooksubmit()">
                    <div class="form-group row">
                        <label for="staticEmail" class="col-sm-2 col-form-label">New Password</label>
                        <div class="col-sm-8">
                            <input type="password"  class="form-control" id="newpwd" name="newpwd" value="" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="staticEmail" class="col-sm-2 col-form-label">Repeat password</label>
                        <div class="col-sm-8">
                            <input type="password"  class="form-control" id="rptpwd" name="rptpwd" value="" required>
                        </div>

                        <div class="col-sm-2">
                            <input type="submit"  class="btn btn-success" value="Submit">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<a class="scroll-to-top rounded" href="#page-top">
    <i class="fa fa-angle-up"></i>
</a>

<script type="text/javascript">
function hooksubmit(){
    if($("#newpwd").val()!=$("#rptpwd").val()) {
        alert("Repeat password is not equal!");
        return false;
    }
    return true;
}
</script>
</body>
</html>
